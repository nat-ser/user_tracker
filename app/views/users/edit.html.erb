<div class="container">
<h2>Edit User <%= @user.name.presence || @user.id %></h2>
	<%= form_for @user, url: {action: "update"}, html: { method: :patch } do |f| %>
		<div class="form-group">
	      <%= f.label :email %><br />
	      <%= f.email_field :email%>
	    </div>

	    <div class="form-group">
	      <%= f.label :name %><br />
	      <%= f.text_field :name %>
	    </div>

	    <div class="form-group">
	      <%= f.label "favorite game" %><br />
	      <%= f.text_field :fave_game %>
	    </div>

	    <div class="form-group">
      		<%= f.submit "Save", class: "btn btn-default"  %>
      		<%= link_to "Cancel", users_path, class: "btn btn-default" %>
    	</div>
	<% end %>
</div>